<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/splashContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context="com.moldedbits.showcase.splash.SplashScreenActivity">

    <com.moldedbits.showcase.splash.WaveView
        android:id="@+id/splashBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wave_background"/>

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_2x"
        android:textSize="@dimen/text_9x2"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:text="@string/moldedbits"/>
</RelativeLayout>
